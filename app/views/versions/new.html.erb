<h1>New Version</h1>

<%= form_for([@project, @version], :validate => true, :remote => true, :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.label :version_number %>
  <%= f.select :version_number, options_for_select((1..10).to_a) %>

  <%= f.label :context %>
  <%= f.text_field :context, :height => '50px' %>

  <%= f.label :version_file %>
  <%= f.file_field :version_file %>

  <%= f.hidden_field :project_id %><br/><br/>

  <%= f.submit "Submit", :class => "btn btn-primary" %><br/>
  <%= link_to 'Cancel', project_path(@project) %>
<% end %>